{
    "name": "odoo-extension",
    "displayName": "Odoo Extension",
    "description": "Provide some highligting and tips for Odoo project",
    "version": "0.0.1",
    "publisher": "fda",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:python",
        "onLanguage:xml",
        "onLanguage:javascript"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
			"activitybar": [
				{
					"id": "odoo-servers",
					"title": "Odoo Servers",
					"icon": "media/odoo.svg"
				}
			]
        },
        "views": {
			"odoo-servers": [
				{
					"id": "test",
					"name": "Test"
                },
                {
					"id": "testi",
					"name": "Testi"
				}
			]
        },
        "snippets": [{
            "language": "python",
            "path": "./snippets/odoo_fields.json"
        }]
    },
    "capabilities" : {
        "hoverProvider" : "true"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
